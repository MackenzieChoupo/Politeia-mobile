{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./src",
    "typeRoots": [
      "../node_modules/@types",
      "node_modules/@types"
    ],
    "types" : [
      "core-js"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "www",
    ".history"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
